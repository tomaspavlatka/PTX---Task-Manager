<h1>Tasks - Overview</h1>

<div class="box">
    <a href="#" class="btn new-task"><span>New Task</span></a>
</div>

<div class="cleaner"></div>
<h2>Overview</h2>

<div id="task-table-container"></div>

<div id="action-window"></div>

<div id="form-new-task" data-width="300" data-height="500" class="displaynone">
    <form action="" method="" class="no-submit">
        <fieldset>
            <div class="form-group">
                <label for="TaskName">Task Name</label>
                <input type="text" class="long" id="TaskName" name="TaskName" />
            </div>

            <div class="form-group">
                <label for="TaskContent">Task Description</label>
                <textarea class="long" id="TaskContent" name="TaskContent"></textarea>
            </div>
        </fieldset>
    </form>
</div>